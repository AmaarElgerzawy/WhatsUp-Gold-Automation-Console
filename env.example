# Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration
WUG_DB_SERVER=localhost
WUG_DB_NAME=WhatsUp
WUG_DB_DRIVER=ODBC Driver 17 for SQL Server

# Backend Configuration
WUG_BACKEND_PORT=8000
WUG_BACKEND_HOST=localhost

# Frontend Configuration
WUG_FRONTEND_PORT=3000

# SMTP Configuration (for Reporting)
WUG_SMTP_SERVER=smtp-relay.brevo.com
WUG_SMTP_PORT=587
WUG_SMTP_USER=your-email@smtp-brevo.com
WUG_SMTP_KEY=your-smtp-key
WUG_REPORT_SENDER=your-email@gmail.com
WUG_REPORT_RECEIVER=recipient@gmail.com

# Backup Configuration
WUG_BACKUP_DIR=Config Backup/backups
WUG_BACKUP_ROUTERS=192.168.1.1,192.168.1.2
WUG_BACKUP_USER=admin
WUG_BACKUP_PASS=your-password
WUG_BACKUP_ENABLE=your-enable-password

# Report Output
WUG_REPORT_OUTPUT=C:\WUG_Exports
